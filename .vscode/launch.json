      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/uni"
    },

    {
      "command": "npm run build:h5",
      "name": "build:h5",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/uni"
    }
  ]
